<div id="<%= dom_id question %>">
  <p>
    <strong>Title:</strong>
    <%= question.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= question.content %>
  </p>

  <p>
    <strong>User:</strong>
    <% question.answers.each do |answer| %> 
      <%= answer.content %>
    <% end %>
  </p>

</div>

